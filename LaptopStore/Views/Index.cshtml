                        </svg>
                    </div>
                    <h3 class="font-bold text-lg mb-2">عدد الزبائن</h3>
                    <p class="text-gray-600">@ViewBag.CustomerCount</p>
                </div>
            </div>
        </div>
    </section>
</main>